<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	android:background="@drawable/OrchidOs_card"
        android:orientation="horizontal"
	android:layout_marginHorizontal="16dp"
	android:layout_marginVertical="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="22dp"
            android:paddingEnd="16dp">
        
            <TextView
                android:id="@+id/processor_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/syberia_processor_title"
                android:textAppearance="@style/TextAppearance.HomepagePreferenceTitle" />
        
            <TextView
                android:id="@+id/processor_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:singleLine="true"
                android:layout_below="@+id/processor_title"
                android:layout_alignStart="@+id/processor_title"
                android:textSize="16sp" />
        
            <TextView
                android:id="@+id/storage_code_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/syberia_storage_code_title"
                android:layout_below="@+id/processor_message"
                android:layout_alignStart="@+id/processor_message"
                android:textAppearance="@style/TextAppearance.HomepagePreferenceTitle" />
        
            <TextView
                android:id="@+id/storage_code_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:singleLine="true"
                android:layout_below="@+id/storage_code_title"
                android:layout_alignStart="@+id/storage_code_title"
                android:textSize="16sp" />
        
            <TextView
                android:id="@+id/battery_type_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/syberia_battery_type_title"
                android:layout_below="@+id/storage_code_message"
                android:layout_alignStart="@+id/storage_code_message"
                android:textAppearance="@style/TextAppearance.HomepagePreferenceTitle" />
        
            <TextView
                android:id="@+id/battery_type_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:singleLine="true"
                android:layout_below="@+id/battery_type_title"
                android:layout_alignStart="@+id/battery_type_title"
                android:textSize="16sp" />
        
            <TextView
                android:id="@+id/screen_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/syberia_screen_title"
                android:layout_below="@+id/battery_type_message"
                android:layout_alignStart="@+id/battery_type_message"
                android:textAppearance="@style/TextAppearance.HomepagePreferenceTitle" />
        
            <TextView
                android:id="@+id/screen_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:singleLine="true"
                android:layout_below="@+id/screen_title"
                android:layout_alignStart="@+id/screen_title"
                android:textSize="16sp" />

        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/phone_image"
            android:layout_width="130dp"
            android:layout_height="215dp"
            android:layout_marginTop="33.0dip"
            android:layout_marginBottom="36.0dip"
            android:layout_marginStart="30.0dp"
            android:layout_marginEnd="25dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="18dp"
            app:strokeColor="?android:attr/textColorPrimary"
            app:strokeWidth="3dp">

            <com.android.utils.aboutWallpaperView
                android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:scaleType="centerCrop"
	            android:gravity="center"
	            android:elevation="0dp"
	            android:contentDescription="@null"
	            android:orientation="vertical" />
	            
	            <ImageView
	                  android:layout_width="50dp"
	                  android:layout_height="50dp"
	                  android:layout_gravity="center"
                          android:tint="?android:attr/colorAccent"
                          android:scaleType="fitCenter"
                          android:src="@drawable/empty_logo" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</FrameLayout>
